@import "/3rd/weui/weui.wxss";

page {
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
  padding: 30px 20px;
}

.page__bd {
  padding-bottom: 30px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

.weui-article__p {
  color: #353535;
}

.block {
  margin: 20px 15px;
}

.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

.pull-left {
  float: left;
}

.pull-right {
  float: right;
}

.text-link {
  color: #576b95;
}

.text-primary {
  color: #64bfa1;
}

.text-success {
  color: #09bb07;
}

.text-info {
  color: #10aeff;
}

.text-warn {
  color: #e64340;
}

.text-black {
  color: #000;
}

.text-semi {
  color: #353535;
}

.text-grey {
  color: #888;
}

.text-light {
  color: #b2b2b2;
}

.btn-more {
  width: 46px;
  height: 46px;
  margin-left: 0.8em;
}

.modals {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 1000;
}

.modal {
  position: fixed;
  top: 25px;
  right: 15px;
  bottom: 25px;
  left: 15px;
  background-color: #fff;
  z-index: 1000;
  border-radius: 6px;
}

.modal__close {
  text-align: right;
  position: relative;
  top: 10px;
  right: 10px;
}

.modal__hd {
  padding: 0 10px;
  text-align: center;
}

.modal__hd, .modal__ft {
  font-weight: 400;
  font-size: 17px;
}

.modal__ft {
  border-top: 1px solid #d9d9d9;
  display: flex;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}

.modal__btn {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: center;
  padding: 8px 0;
  border-left: 1rpx solid #d9d9d9;
}

.modal__btn:first-child {
  border: none;
}

.clearfix:before, .clearfix:after {
  display: table;
  content: " ";
  clear: both;
}
